<UserControl x:Class="docrafERP.Views.UCmanageSupplies"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:docrafERP.Views"
             mc:Ignorable="d" 
                
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"  
             Loaded="UserControl_Loaded" IsVisibleChanged="UserControl_IsVisibleChanged" d:DesignHeight="550" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.TextBlock.xaml"/>
                <!-- throw in some extra colour for our floating action button -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/MaterialDesignColor.Green.Named.Primary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>


        <Grid>


            <materialDesign:DialogHost BorderBrush="{DynamicResource MaterialDesignDivider}" Name="dialogForQuant" >
                <materialDesign:DialogHost.DialogContent >

                    <Grid Width="300" Height="200" HorizontalAlignment="Center">
                        <StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10">
                                <materialDesign:PackIcon Kind="HandBackLeft" Foreground="{StaticResource PrimaryHueMidBrush}" Width="50" Height="50"/>

                                <TextBlock Foreground="Gray" Width="200" Margin="5" TextWrapping="Wrap">
                                    Please Enter the quantity of the order to send to the Supply Department...
                                </TextBlock>




                            </StackPanel>
                            <TextBox Name="DialogHostText" Width="200" MaxLines="1" Style="{DynamicResource MaterialDesignOutlinedTextBox}" materialDesign:HintAssist.Hint="Quantity...">

                            </TextBox>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="15">
                                <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatButton}" Margin="4" VerticalAlignment="Center" Click="OrderConsumeSup">
                                    Order
                                </Button>
                                <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatButton}" Margin="4" VerticalAlignment="Center" Click="PreviewICSSup">
                                    Preview RIS
                                </Button>
                                <Button Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Style="{DynamicResource MaterialDesignFlatButton}" Margin="4" VerticalAlignment="Center" >
                                    Cancel
                                </Button>
                            </StackPanel>


                        </StackPanel>

                    </Grid>

                </materialDesign:DialogHost.DialogContent>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="98"/>
                        <RowDefinition Height="391*"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Name="SearchBarSup" Margin="0,-160,69.6,-0.4" >
                        <Grid HorizontalAlignment="Right" >
                            <ComboBox Name="SupSearchBarTB"

                        Style="{StaticResource MaterialDesignOutlinedComboBox}"
                        materialDesign:HintAssist.Hint="Search..."
                        materialDesign:HintAssist.HelperText="Note: Use the Search field in finding by Barcode scanner or RFID reader..."
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        materialDesign:HintAssist.HelperTextFontSize="8.3"                       
                        IsDropDownOpen="False"
                        MaxDropDownHeight="0"
                        IsEditable="True"
                        Foreground="White"
                        Background="#07AEFF"
                        BorderBrush="White"
                        materialDesign:HintAssist.Foreground="White"
                        materialDesign:HintAssist.Background="#07AEFF"
                        BorderThickness="3"
                        Padding="4"
                        Height="35"
                        FontSize="16"
                        FontWeight="DemiBold"
                        Margin="3"
  
                        Width="300" PreviewTextInput="SearchBarTB_PreviewTextInput" MouseLeave="SearchBarTB_MouseLeave" PreviewKeyDown="SearchBarTB_PreviewKeyDown"/>
                        </Grid>
                    </DockPanel>


                    <StackPanel Grid.Row="1" x:Name="FilterBar" Margin="0,0,-0.4,-0.4" >

                        <StackPanel Margin="0 3 0 7" Orientation="Horizontal">
                            <materialDesign:PackIcon Height="18" Width="18"  Margin="3 0 0 0" Kind="ArchiveCheckOutline" Foreground="#00CE46"/>
                            <Label  Content="Ready to use" Style="{StaticResource Header3}" FontFamily="Roboto" Foreground="#00CE46"/>
                            <materialDesign:PackIcon Height="18" Width="18"  Margin="3 0 0 0" Kind="ArchiveAlertOutline" Foreground="#FFA500"/>
                            <Label Content="Low on stock" Style="{StaticResource Header3}" FontFamily="Roboto" Foreground="#FFA500"/>
                            <materialDesign:PackIcon Height="18" Width="18"  Margin="3 0 0 0" Kind="ArchiveCancelOutline" Foreground="#FF3232"/>
                            <Label Content="Out of stock" Style="{StaticResource Header3}" FontFamily="Roboto" Foreground="#FF3232"/>
                        </StackPanel>



                        <StackPanel >


                            <Label DockPanel.Dock="Left" Margin="0 0 0 0" FontSize="20" Foreground="{StaticResource PrimaryHueMidBrush}" Content="Supplies:" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" />


                            <ListBox   Height="80" MinWidth="100" DockPanel.Dock="Right" Name="SupplyFilterSLB" Margin="300 -68 -15 0" HorizontalAlignment="Right" HorizontalContentAlignment="Right"
                    Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineListBox}"   >


                                <ListBoxItem 
                      x:Name="FilterAccountCode"
                   
                       IsSelected="True">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                    
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="CategoryOutline"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="Item Code" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>
                                </ListBoxItem>

                                <ListBoxItem 
                     x:Name="FilterCustodian"
                       IsSelected="True">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                     
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="PersonOutline"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="Project Personnel" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>
                                </ListBoxItem>

                                <ListBoxItem
                         x:Name="FilterThisYear"
                        >

                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                    
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="Calendar"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="This Year" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>
                                </ListBoxItem>

                                <ListBoxItem
                         x:Name="FilterPrice"
                        >

                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                    
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="Money"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="Price" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>
                                </ListBoxItem>

                                <ListBoxItem 
                      x:Name="FilterAssetName"
                   
                       IsSelected="True">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                    
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="Toolbox"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="Supply Name" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>
                                </ListBoxItem>


                                <ListBoxItem
                         x:Name="FilterStatusisAvailable"
                        >

                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                    
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="ClipboardCheck"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="Status is Available" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>
                                </ListBoxItem>

                                <ListBoxItem
                         x:Name="FilterStatusisDirectorApproved"
                        
                        

                    >
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                    
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="AccountTieHat"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="Status is Director Approved" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>
                                </ListBoxItem>

                                <ListBoxItem
                         x:Name="FilterPriceislessthan1000us"
                        >
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                    
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="Money100"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="Price is less than ₱50,000" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>

                                </ListBoxItem>

                                <ListBoxItem
                         x:Name="FilterStatusisAccountingApproved"
                      >
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                    
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="AccountCash"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="Status is Accounting Approved" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>

                                </ListBoxItem>



                                <ListBoxItem
                         x:Name="FilterSerialNumber"
                        >

                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                    
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="Barcode"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="Serial Number" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>
                                </ListBoxItem>


                                <ListBoxItem
                         x:Name="FilterBrand"
                       IsSelected="True">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                    
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="ShoppingOutline"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="Brand" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>
                                </ListBoxItem>


                                <ListBoxItem
                         x:Name="FilterLocation"
                        >

                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                    
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="HospitalLocation"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="Location" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>
                                </ListBoxItem>

                                <ListBoxItem
                         x:Name="FilterVendor"
                        IsEnabled="False"
                       >
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                    
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="StoreCheckOutline"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="Vendor" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>
                                </ListBoxItem>

                                <ListBoxItem
                         x:Name="FilterStatusisRequested"
                      >
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                    
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="AccountQuestionOutline"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="Status is Requested" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>
                                </ListBoxItem>


                                <ListBoxItem
                         x:Name="FilterStatusisOrdered"
                        >
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                    
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="AccountTieVoice"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="Status is Ordered" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>
                                </ListBoxItem>

                                <ListBoxItem
                         x:Name="FilterStatusisAcceptingbySM"
                        >
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                    
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="AccountDetailsOutline"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="Status is Accepting by SM" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>
                                </ListBoxItem>

                                <ListBoxItem
                         x:Name="Filterthismonth"
                        >
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:Badged>
                                            <materialDesign:PackIcon
                                    
                                     Margin="1 0 5 0"
                                     Width="18"
                                     Height="18"
                                     Foreground="{StaticResource PrimaryHueMidBrush}"
                                     Kind="CalendarMonthOutline"
                                    
                                    />
                                        </materialDesign:Badged>
                                        <TextBlock Text="this month" Foreground="{StaticResource PrimaryHueMidBrush}" Style="{StaticResource MaterialDesignButtonTextBlock}" ></TextBlock>

                                    </StackPanel>
                                </ListBoxItem>


                            </ListBox>
                        </StackPanel>


                        <ProgressBar Margin="0 0 0 2" Value="9.5" Height="1.5" Background="#F1F1F1" Foreground="{StaticResource PrimaryHueLightBrush}" materialDesign:TransitionAssist.DisableTransitions="False" BorderBrush="#F1F1F1" />
                        <ProgressBar Margin="0 0 0 10" Value="99" Height="2" Background="#F1F1F1" Foreground="{StaticResource PrimaryHueLightBrush}" materialDesign:TransitionAssist.DisableTransitions="False" BorderBrush="#F1F1F1" />

                    </StackPanel>

                    <!--RowStyle="{StaticResource CenteredDataGrdidClm}"-->


                    <Grid  Margin="2,2,-0.4,-0.4" Grid.Row="2" >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="55"/>
                            <ColumnDefinition Width="106*"/>
                        </Grid.ColumnDefinitions>




                        <DataGrid 
                          Margin="5.2,0,2.2,-0.2" 
                          Grid.Column="1"
                          x:Name="LVsupplies"
                          MouseDoubleClick="ItemSelected" 
                          
                          Background="Transparent"
                          ItemsSource="{Binding Path = AssetsForListview}"
                          CanUserAddRows="False"
                          AutoGenerateColumns="True"
                          AutoGeneratingColumn="AutoGeneratingColumn"
                          ColumnHeaderHeight="60"
                          BorderThickness="0.8"
                          BorderBrush="#0DCAF2"
                          HeadersVisibility="All" MouseRightButtonDown="LVsupplies_OnMouseRightButtonDown">

                            <DataGrid.ColumnHeaderStyle>

                                <Style
                                        
                                         TargetType="{x:Type DataGridColumnHeader}"
                                         BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">


                                    <Setter Property="FontWeight" Value="SemiBold" />
                                    <Setter Property="Foreground" Value="#0DCAF2"/>
                                    <Setter Property="Background" Value="Transparent"></Setter>

                                </Style>

                            </DataGrid.ColumnHeaderStyle>

                            <DataGrid.Columns>

                                <DataGridCheckBoxColumn
                        
                      Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                      ElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnStyle}"
                      EditingElementStyle="{StaticResource MaterialDesignDataGridCheckBoxColumnEditingStyle}">
                                    <DataGridCheckBoxColumn.Header>
                                        <Border
                                
                                Background="Transparent"
                                >

                                            <CheckBox/>
                                        </Border>
                                    </DataGridCheckBoxColumn.Header>
                                    <DataGridCheckBoxColumn.HeaderStyle>
                                        <Style
                                  TargetType="{x:Type DataGridColumnHeader}"
                                  BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                            <Setter
                                Property="HorizontalContentAlignment"
                                Value="Center" />
                                            <Setter Property="FontWeight" Value="SemiBold" />
                                            <Setter Property="Foreground" Value="#0DCAF2"/>
                                        </Style>
                                    </DataGridCheckBoxColumn.HeaderStyle>
                                </DataGridCheckBoxColumn>






                                <DataGridTemplateColumn
                        Header="    Status                  Image"
                        CellTemplateSelector="{StaticResource supplydataTemplateSelectorDirectory}"
                       
                     >
                                    <DataGridTemplateColumn.HeaderStyle>
                                        <Style
                                  TargetType="{x:Type DataGridColumnHeader}"
                                  BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                                            <Setter
                                Property="HorizontalContentAlignment"
                                Value="Center" />
                                            <Setter Property="FontWeight" Value="SemiBold" />
                                            <Setter Property="Foreground" Value="#0DCAF2"/>

                                        </Style>
                                    </DataGridTemplateColumn.HeaderStyle>
                                </DataGridTemplateColumn>


                            </DataGrid.Columns>
                        </DataGrid>

                        <Border HorizontalAlignment="Left" MaxWidth="300"  Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="2" BorderBrush="#0DCAF2"   Margin="2,0,0,0" CornerRadius="5" VerticalAlignment="Top" Height="370" >


                            <materialDesign:Card >
                                <StackPanel Orientation="Vertical">

                                    <Expander ExpandDirection="Right"
                                          HorizontalAlignment="Right" Height="370" RenderTransformOrigin="0.41,0.506">

                                        <Expander.Header>
                                            <TextBlock Name="InvntoryNameTB"
                                                 Text="{Binding Path= InventoryTreeViewModel.SelectedInventoryName}"  Foreground="#0DCAF2" Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                                   RenderTransformOrigin=".5,.5">
                                                <TextBlock.LayoutTransform>
                                                    <RotateTransform
                                                        Angle="90" />
                                                </TextBlock.LayoutTransform>
                                            </TextBlock>
                                        </Expander.Header>

                                        <StackPanel
                                              Orientation="Vertical"
                                              TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
                                                 Margin="24,8,24,16">

                                            <TextBlock FontSize="9" FontWeight="Light"
                                                     Text="Filter by an Inventory or Program..." />
                                            <TextBlock />

                                            <StackPanel Width="270" Margin="-20 5 10 0">
                                                <ScrollViewer>
                                                    <TreeView SelectedItemChanged="TreeFilterItemChanged"   ItemsSource="{Binding Path= InventoryTreeViewModel.ParentItem.Children}"  IsManipulationEnabled="True" Name="InventoryTree"  Margin="0 1 2 -20"  MinHeight="230" MaxHeight="250"  Width="200">



                                                        <TreeView.ItemTemplate >


                                                            <HierarchicalDataTemplate   ItemsSource="{Binding Children}">
                                                                <TreeViewItem  Style="{x:Null}" IsExpanded="True"  Header="{Binding InventoryName}" BorderBrush="#FF07AEFF" BorderThickness="1" FontSize="8" FontWeight="Bold">
                                                                    <TreeViewItem AllowDrop="False"  Style="{DynamicResource MaterialDesignTreeViewItem}"   ItemsSource="{Binding Children.Children }"  Header="{Binding Children.Children.InventoryName}" MinWidth="100" BorderBrush="#FF07AEFF" BorderThickness="1"  FontSize="7" FontWeight="Bold"    />

                                                                </TreeViewItem>

                                                            </HierarchicalDataTemplate>


                                                        </TreeView.ItemTemplate>





                                                    </TreeView>
                                                </ScrollViewer>

                                               


                                                <materialDesign:PopupBox
  
                                                    Style="{StaticResource MaterialDesignMultiFloatingActionPopupBox}"
                                                    PlacementMode="LeftAndAlignMiddles"
                                                    UnfurlOrientation="Horizontal"
                                                    ToolTip="Manage items"
                                                    Margin="0 0 70 5"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Bottom">

                                                    <StackPanel
                                                      Orientation="Horizontal">
                                                        <Button
                                                      Click="AddNewTreeItem"
                                                      ToolTip="Add an item"
                                                      Command="{Binding AddCommand}">
                                                            <Path
                                                      Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"
                                                      Stretch="Uniform"
                                                      Width="15"
                                                      Height="15"
                                                      Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" />
                                                        </Button>
                                                        <Button
                                                      ToolTip="Remove selected item"
                                                      Command="{Binding RemoveSelectedItemCommand}" Click="DeleteTreeItem">
                                                            <Path
                                                      Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                                      Stretch="Uniform"
                                                      Width="15"
                                                      Height="15"
                                                      Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}" />
                                                        </Button>

                                                    </StackPanel>
                                                </materialDesign:PopupBox>

                                            </StackPanel>

                                        </StackPanel>
                                    </Expander>


                                </StackPanel>
                            </materialDesign:Card>



                        </Border>


                    </Grid>

                    <StackPanel Name="ButtonBar"  Orientation="Vertical" Margin="0,0,-0.4,-0.4" Grid.Row="3">
                        <Line  Stretch="Fill" Margin="0,5,0,0" HorizontalAlignment="Center" Width="442" Stroke="DarkGray" X2="1" Opacity="0.4" />
                        <StackPanel Name="SuppliesEditBar" HorizontalAlignment="Center" Orientation="Horizontal" Margin="4 8 10 0">
                            <Button
                  Width="109"
                  x:Name="MobieDeleteBtn"
                  Style="{StaticResource MaterialDesignOutlinedButton}"
                  ToolTip="CLick to delete an Asset..."
                  Content="Delete"     
                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" Click="SupplyDeleteBtn_Click" />
                            <Button
                  Margin="10 0 0 0"
                  Width="109"
                  x:Name="MobieEditBtn"
                  Style="{StaticResource MaterialDesignOutlinedButton}"
                  ToolTip="CLick to edit an Asset..."
                  Content="Edit"     
                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" Click="SupplyEditBtn_Click" />

                            <Button
                  Margin="10 0 0 0"
                  Width="109"
                  x:Name="PrintAssetBtn"
                  Style="{StaticResource MaterialDesignOutlinedButton}"
                  ToolTip="Sort and filter your list  and click on print to make a document..."
                  Content="Print"     
                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" Click="SupplyPirntBtn_Click" />


                            <Button
                  Margin="10 0 0 0"
                  Width="109"
                  x:Name="MobieAddBtn"
                  Style="{StaticResource MaterialDesignOutlinedButton}"
                  ToolTip="CLick to add a new Asset..."
                  Content="Add New"     
                  IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" Click="SupplyAddBtn_Click" />
                            <Button
                            Margin="10 0 0 0"
                            Width="109"
                          
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                           Name="OrderButton"
                            Content="Order"     
                            Command="{x:Static materialDesign:DialogHost.OpenDialogCommand }"
 


                           />
                        </StackPanel>

                    </StackPanel>




                    <!--<Label x:Name="LabelLisans" FontWeight="Normal"  Margin="0 0 0 0" Style="{StaticResource Header3}" Foreground="#000008" Content="License" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30.5" />
                    <ProgressBar Margin="0 0 0 1" Value="8" Height="2" Background="#F1F1F1" Foreground="#0DCAF2" materialDesign:TransitionAssist.DisableTransitions="False" BorderBrush="#F1F1F1" />
                    <Label  Style="{StaticResource Header4}" Margin="0 5 0 0" Foreground="DarkGray" Content="ERP Desktop, valid until 22.06. 2030" HorizontalAlignment="Left" VerticalAlignment="Top" Height="42.5" />-->
                </Grid>
            </materialDesign:DialogHost>


            <materialDesign:Snackbar
              x:Name="SearchSnackBar"
              Message="                         Your search did not match any item..."
              IsActive="False"
