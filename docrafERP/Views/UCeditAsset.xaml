<UserControl x:Class="docrafERP.Views.UCeditAsset"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:docrafERP.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="99*"/>
            <ColumnDefinition Width="61*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" Margin="30 0 0 0">
            <StackPanel>
                <Image Source="/UIassets/image 14.png" Width="220" Height="220" Margin="0 0 0 5"/>
                <Label Content="Related Documents" FontWeight="Medium" Foreground="Gray" Style="{StaticResource Header1}" Margin="0 0 0 5"  />
                <StackPanel Margin="0 0 20 0">
                    <ListView Height="236"  BorderThickness="2" BorderBrush="#0DCAF2" >
                        <ListViewItem Content="Purchase Request.pdf" Margin="1"  BorderThickness="1" BorderBrush="#0DCAF2" ></ListViewItem>
                        <ListViewItem Content="Purchase Order.pdf" Margin="1" BorderThickness="1" BorderBrush="#0DCAF2" ></ListViewItem>
                        <ListViewItem Content="AIR.pdf" Margin="1"  BorderThickness="1" BorderBrush="#0DCAF2" ></ListViewItem>
                        <ListViewItem Content="Invoice.pdf" Margin="1" BorderThickness="1" BorderBrush="#0DCAF2" ></ListViewItem>
                        <ListViewItem Content="ReceivingDocDR.Madona.pdf" Margin="1"  BorderThickness="1" BorderBrush="#0DCAF2" ></ListViewItem>
                        <ListViewItem Content="Warrant.pdf" Margin="1" BorderThickness="1" BorderBrush="#0DCAF2" ></ListViewItem>
                    </ListView>
                    <StackPanel Orientation="Horizontal" >
                        <materialDesign:PackIcon Height="27"  Width="27" Kind="FileDocumentAdd" Margin="2 6 0 0" MouseDown="AddDocBtn">
                            <materialDesign:PackIcon.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#0DCAF2" Offset="0"/>
                                </LinearGradientBrush>
                            </materialDesign:PackIcon.Foreground>
                        </materialDesign:PackIcon>
                        <materialDesign:PackIcon Height="27"  Width="27" Kind="FileDocumentDelete" Margin="2 6 0 0" MouseDown="DeleteDocBtn">
                            <materialDesign:PackIcon.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#0DCAF2" Offset="0"/>
                                </LinearGradientBrush>
                            </materialDesign:PackIcon.Foreground>
                        </materialDesign:PackIcon>
                        <materialDesign:PackIcon Height="27"  Width="27" Kind="ContentSave" Margin="120 6 0 0" MouseDown="SavetoAssetBtn">
                            <materialDesign:PackIcon.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#0DCAF2" Offset="0"/>
                                </LinearGradientBrush>
                            </materialDesign:PackIcon.Foreground>
                        </materialDesign:PackIcon>

                        <materialDesign:PackIcon Height="27"  Width="27" Kind="SignOut" Margin="2 6 0 0" MouseDown="BacktoAssetBtn">
                            <materialDesign:PackIcon.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#0DCAF2" Offset="0"/>
                                </LinearGradientBrush>
                            </materialDesign:PackIcon.Foreground>
                        </materialDesign:PackIcon>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Column="0">
            <StackPanel>

                <StackPanel Margin="0 2 0 2" Orientation="Horizontal">
                    <Label Content="Device" FontWeight="Medium" Foreground="Gray" Style="{StaticResource Header2}" VerticalAlignment="Center" Width="100" Margin="0 0 2 0"   />
                    <TextBox VerticalAlignment="Center"
                 FontWeight="Normal"
                            Width="330"
                            Margin="0 0 0 0"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            
                            HorizontalAlignment="Left"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            MaxWidth="400"
                            
                            materialDesign:HintAssist.Hint="Please enter the Device name..."
                            Foreground="#000009"
                            SelectionBrush="#07AD40"
                            BorderBrush="#0DCAF2"
                            FontFamily="Roboto"
                            FontSize="12px" CaretBrush="#FF07AD40"/>
                </StackPanel>

                <StackPanel Margin="0 2 0 2" Orientation="Horizontal">
                    <Label Content="Owner/Location" FontWeight="Medium" Foreground="Gray" Style="{StaticResource Header2}" VerticalAlignment="Center" Width="100" Margin="0 0 2 0"   />
                    <TextBox VerticalAlignment="Center"
                 FontWeight="Normal"
                            Width="330"
                            Margin="0 0 0 0"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            
                            HorizontalAlignment="Left"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            MaxWidth="400"
                            
                            materialDesign:HintAssist.Hint="Please enter the Device location..."
                            Foreground="#000009"
                            SelectionBrush="#07AD40"
                            BorderBrush="#0DCAF2"
                            FontFamily="Roboto"
                            FontSize="12px" CaretBrush="#FF07AD40"/>
                </StackPanel>
                <StackPanel Margin="0 2 0 2" Orientation="Horizontal">
                    <Label Content="Status" FontWeight="Medium" Foreground="Gray" Style="{StaticResource Header2}" VerticalAlignment="Center" Width="100" Margin="0 0 2 0"   />
                    <TextBox VerticalAlignment="Center"
                 FontWeight="Normal"
                            Width="330"
                            Margin="0 0 0 0"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            
                            HorizontalAlignment="Left"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            MaxWidth="400"
                            
                            materialDesign:HintAssist.Hint="on repair"
                            Foreground="#000009"
                            SelectionBrush="#07AD40"
                            BorderBrush="#0DCAF2"
                            FontFamily="Roboto"
                            FontSize="12px" CaretBrush="#FF07AD40"/>
                </StackPanel>

                <StackPanel Margin="0 2 0 2" Orientation="Horizontal">
                    <Label Content="Serial Number" FontWeight="Medium" Foreground="Gray" Style="{StaticResource Header2}" VerticalAlignment="Center" Width="100" Margin="0 0 2 0"   />
                    <TextBox VerticalAlignment="Center"
                 FontWeight="Normal"
                            Width="330"
                            Margin="0 0 0 0"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            
                            HorizontalAlignment="Left"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            MaxWidth="400"
                            
                            materialDesign:HintAssist.Hint="4CE0460D0G"
                            Foreground="#000009"
                            SelectionBrush="#07AD40"
                            BorderBrush="#0DCAF2"
                            FontFamily="Roboto"
                            FontSize="12px" CaretBrush="#FF07AD40" />
                </StackPanel>

                <ProgressBar Margin="0 10 0 10" Value="95.1" Height="2" Background="#F1F1F1" Foreground="#0DCAF2" materialDesign:TransitionAssist.DisableTransitions="False" BorderBrush="#F1F1F1" />
                <StackPanel Margin="0 2 0 2" Orientation="Horizontal">
                    <Label Content="Date Received" FontWeight="Medium" Foreground="Gray" Style="{StaticResource Header2}" VerticalAlignment="Center" Width="100" Margin="0 0 2 0"   />
                    <TextBox VerticalAlignment="Center"
                 FontWeight="Normal"
                            Width="330"
                            Margin="0 0 0 0"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            
                            HorizontalAlignment="Left"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            MaxWidth="400"
                            
                            materialDesign:HintAssist.Hint="June 7, 2022"
                            Foreground="#000009"
                            SelectionBrush="#07AD40"
                            BorderBrush="#0DCAF2"
                            FontFamily="Roboto"
                            FontSize="12px" CaretBrush="#FF07AD40"/>
                </StackPanel>

                <StackPanel Margin="0 2 0 2" Orientation="Horizontal">
                    <Label Content="Purchased Vendor" FontWeight="Medium" Foreground="Gray" Style="{StaticResource Header3}" VerticalAlignment="Center" Width="100" Margin="0 0 2 0"   />
                    <TextBox VerticalAlignment="Center"
                 FontWeight="Normal"
                            Width="330"
                            Margin="0 0 0 0"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            
                            HorizontalAlignment="Left"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            MaxWidth="400"
                            
                            materialDesign:HintAssist.Hint="https://www.lazada.com.ph/"
                            Foreground="#000009"
                            SelectionBrush="#07AD40"
                            BorderBrush="#0DCAF2"
                            FontFamily="Roboto"
                            FontSize="12px" CaretBrush="#FF07AD40"/>
                </StackPanel>
                <StackPanel Margin="0 2 0 2" Orientation="Horizontal">
                    <Label Content="Purchase Price" FontWeight="Medium" Foreground="Gray" Style="{StaticResource Header2}" VerticalAlignment="Center" Width="100" Margin="0 0 2 0"   />
                    <TextBox VerticalAlignment="Center"
                 FontWeight="Normal"
                            Width="330"
                            Margin="0 0 0 0"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            
                            HorizontalAlignment="Left"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            MaxWidth="400"
                            
                            materialDesign:HintAssist.Hint="₱23,999.00"
                            Foreground="#000009"
                            SelectionBrush="#07AD40"
                            BorderBrush="#0DCAF2"
                            FontFamily="Roboto"
                            FontSize="12px" CaretBrush="#FF07AD40"/>
                </StackPanel>

                <StackPanel Margin="0,2,46,2" Orientation="Horizontal">
                    <Label Content="Barcode" FontWeight="Medium" Foreground="Gray" Style="{StaticResource Header2}" VerticalAlignment="Center" Width="100" Margin="0 0 2 0"   />
                    <TextBox Name="EncryptionKeyTB" VerticalAlignment="Center"
                 FontWeight="Normal"
                            Width="194"
                            Margin="0 0 0 0"
                            Style="{StaticResource MaterialDesignFilledTextBox}"
                            
                            HorizontalAlignment="Left"
                            AcceptsReturn="True"
                            TextWrapping="Wrap"
                            MaxWidth="400"
                            
                            materialDesign:HintAssist.Hint="Enter / Generate new"
                            Foreground="#07AD40"
                            SelectionBrush="#07AD40"
                            BorderBrush="#0DCAF2"
                            FontFamily="Roboto"
                            FontSize="12px" CaretBrush="#FF07AD40"  Text="73960856467"/>
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Margin="0 10 0 10">

                        <materialDesign:PackIcon HorizontalAlignment="Left" Height="35"  Width="35" Kind="ForeignKey" Margin="3 10 0 0" MouseDown="GeneradeRandomBtn">
                            <materialDesign:PackIcon.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#0DCAF2" Offset="0"/>
                                </LinearGradientBrush>
                            </materialDesign:PackIcon.Foreground>
                        </materialDesign:PackIcon>
                        <materialDesign:PackIcon HorizontalAlignment="Left" Height="35"  Width="35" Kind="ContentCopy" Margin="2 10 0 0" MouseDown="copyToCLipboardBtn" >
                            <materialDesign:PackIcon.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#0DCAF2" Offset="0"/>
                                </LinearGradientBrush>
                            </materialDesign:PackIcon.Foreground>
                        </materialDesign:PackIcon>
                        <materialDesign:PackIcon HorizontalAlignment="Left" Height="35"  Width="35" Kind="BarcodeScan" Margin="2 10 0 0" MouseDown="ScanBarconeBtn">
                            <materialDesign:PackIcon.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#0DCAF2" Offset="0"/>
                                </LinearGradientBrush>
                            </materialDesign:PackIcon.Foreground>
                        </materialDesign:PackIcon>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="102 0 0 0" Orientation="Vertical"  HorizontalAlignment="Left" >
                        <Label Foreground="Gray" Style="{StaticResource Header3}" Content="Serial code for printing" HorizontalAlignment="Center" VerticalAlignment="Top" MaxWidth="130"/>
                        <Image x:Name="QRcodeImage" Source="/UIassets/image 15.png" HorizontalAlignment="Center"  Width="110" Height="95"/>

                    </StackPanel>
                    <StackPanel Margin="0 30 0 0">
                        <materialDesign:PackIcon Height="27"  Width="27" Kind="ContentSave" Margin="2 0 0 0" MouseDown="QRSaveAspicBtn">
                            <materialDesign:PackIcon.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#0DCAF2" Offset="0"/>
                                </LinearGradientBrush>
                            </materialDesign:PackIcon.Foreground>
                        </materialDesign:PackIcon>

                        <materialDesign:PackIcon Height="27"  Width="27" Kind="Whatsapp" Margin="2 6 0 0" MouseDown="QRwhatsappBtn">
                            <materialDesign:PackIcon.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#0DCAF2" Offset="0"/>
                                </LinearGradientBrush>
                            </materialDesign:PackIcon.Foreground>
                        </materialDesign:PackIcon>
                        <materialDesign:PackIcon Height="27"  Width="27" Kind="Barcode" Margin="2 6 0 0" MouseDown="PrintQRcodeBTn">
                            <materialDesign:PackIcon.Foreground>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#0DCAF2" Offset="0"/>
                                </LinearGradientBrush>
                            </materialDesign:PackIcon.Foreground>
                        </materialDesign:PackIcon>
                    </StackPanel>
                </StackPanel>

            </StackPanel>
        </Grid>
       
    </Grid>

</UserControl>
